{
  "name": "cypressclean",
  "version": "1.0.0",
  "description": "QA Automation Portfolio with Cypress and Mochawesome",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome*.json > cypress/reports/report.json",
    "report:generate": "marge cypress/reports/report.json -f report -o cypress/reports/html",
    "test:all": "npm run cypress:run && npm run report:merge && npm run report:generate"
  },
  "keywords": ["cypress", "qa", "automation", "mochawesome"],
  "author": "Marco Lo Bianco",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^15.2.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.2"
  }
}
